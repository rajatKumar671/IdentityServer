@using IndentityServerDemo.Models;
@model LoginInputModel

<div class="login-page">
    <div class="page-header" style="position:relative;left:46%">
        <h1>Login</h1>
    </div>
    <partial name="_ValidationSummary" />
    <div class="columns">
        <div class="col-sm-6" style="position:relative;left:36%">
            <div clas="panel panel-default">
                <div class="panel-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset style="border:none; background-color:blueviolet; margin-right:71%">
                            <div class="form-group" style="margin:6px;margin-top:10%">
                                <label asp-for="Username"></label>
                                <input class="form-control" style="height:35px;border-radius:6px;margin-left:2px;padding-left:4px" placeholder="Username" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group" style="margin-left:7px;margin-top:10%">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" style="margin-left:4px;height:35px;border-radius:6px;padding-left:4px" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group" style="margin-top:40px">
                                <button name="button" style="padding:10px 18px;background-color:#4CAF50;border-color:#4CAF50; border-radius:10px;width:90%;position:relative;left:13px; " value="login">Login</button>
                                <br>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



